<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_weather_gradient"
    android:padding="24dp">

    <!-- TITLE -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeCity"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:text="Change location"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:elevation="4dp"
        app:iconGravity="textStart"
        app:iconTint="#333333"
        app:layout_constraintBottom_toTopOf="@+id/cardWeather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DATE -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCFFFFFF"
        android:textSize="16sp"
        tools:text="Monday, 14 Oct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <!-- STATUS -->
    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_status_pill"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="Locating..."
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDate" />

    <!-- CURRENT WEATHER CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWeather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/textStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- CITY -->
            <TextView
                android:id="@+id/textCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"
                app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                app:drawableTint="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Kyiv" />

            <!-- ICON -->
            <ImageView
                android:id="@+id/imageWeatherIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:contentDescription="Weather icon"
                android:src="@android:drawable/ic_menu_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textCity"
                app:tint="@color/black" />

            <!-- TEMPERATURE -->
            <TextView
                android:id="@+id/textTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="64sp"
                android:textStyle="bold"
                tools:text="24Â°"
                app:layout_constraintTop_toTopOf="@id/imageWeatherIcon"
                app:layout_constraintBottom_toBottomOf="@id/imageWeatherIcon"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- DESCRIPTION -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:textSize="18sp"
                tools:text="Partly cloudy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageWeatherIcon" />

            <!-- DIVIDER -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@id/textDescription" />

            <!-- DETAILS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="5.4 m/s" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="42%" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FORECAST TITLE -->

    <!-- FORECAST LIST -->

    <!-- REFRESH BUTTON -->
    <TextView
        android:id="@+id/textForecastTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Next days"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWeather" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerForecast"
        android:layout_width="368dp"
        android:layout_height="136dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textForecastTitle"
        tools:listitem="@layout/item_forecast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRefresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FFFFFF"
        android:text="Update Location"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_popup_sync"
        app:iconGravity="textStart"
        app:iconTint="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
